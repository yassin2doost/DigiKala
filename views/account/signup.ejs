<% layout('layout') -%>

<head class="h3" >
        <head >
        <title>  ثبت نام  </title>

    </head>

<div class="row">
        <div class="container center_div">

        <% if (errors.length > 0) { %>
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <%= errors %>
            </div>
            <% } %>

        <form method="post">
                <div class="container">
                    
                    <div class="text-center">
            <h1 class=""> همین الان ثبت نام کن !</h1>
            </div>
            <div class="form-group">
                <label="username">نام کاربری :</label>
            <input type="text" class="form-control" name="username" required placeholder="نام کاربری خود را وارد فرمایید" >
            </div>
            <div class="form-group">
                <label="email">ایمیل :</label>
            <input type="email" class="form-control" name= "email" required placeholder="ایمیل خود را وارد فرمایید">
            </div>
              <div class="form-group">
                  <label="name">نام و نام خانوادگی :</label>
            <input type="name" class="form-control" name= "name" required placeholder="نام و نام خانوادگی خود را وارد کنید">
          </div>
        <div class="form-group">
            <label="password">رمزعبور :</label>
            <input type="password" class="form-control" name="password" required placeholder="حداقل طول پسورد باید ۹ کاراکنر باشد">
           </div>
           <br/>
           <div class="checkbox">
                <label><input type="checkbox" value="" required> قوانین و خوندم و باهاش نه تنها موافقم که حالم کردم </label>
              </div>
              <br />
           <div class="form-group">
               
                <button  class="btn btn-primary btn-block btn-lg  " type="submit" aria-pressed="true"> <h4>   با خوشحالی ثبت نامم کن <h3> :) </h3></h4> </button>
       
        </div>
         </form>
        </div>
    </div>
</div>